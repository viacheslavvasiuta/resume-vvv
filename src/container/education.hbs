<div>
    {{#with main}}
    <main>
        <section>
            {{> title data="My education" big=true}}
            <ul>
                {{#each educations}}
                <li>
                    {{name}}
                    {{#unless isEnd}} (ще навчаюсь) {{/unless}}
                </li>
                {{/each}}
            </ul>
        </section>

        <section>
            {{> title dat="My certificates"}}
            <ul>
                {{#each cartificates}}
                <li>
                    {{name}} ({{id}})
                </li>
                {{/each}}
            </ul>
        </section>
    </main>
</div>

